<table class="table rounded-corners">
  <thead class="thead">
    <tr>
      <th>ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% genres.each do |genre| %>
    <tr class="row-hover rounded-corners">
      <td>
        <%= link_to genre.name, public_items_path(genre_id: genre.id), method: :get, class: "text-decoration-none text-dark" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
