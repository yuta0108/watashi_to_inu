<div class="text-center my-5">
  <h3>マイページ</h3>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-2 mt-4 offset-1">
      <h5>登録情報</h5>
    </div>
    <div class="col-2 mt-3">
      <%= link_to "編集する", edit_public_customer_path, class: "btn btn-success" %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-5 mt-4">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th style="width: 40%; background-color: #dee2e6;">氏名</th>
            <td><%= @customer.first_name %><%= @customer.last_name %></td>
          </tr>
          <tr>
            <th style="width: 40%; background-color: #dee2e6;">カナ</th>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th style="width: 40%; background-color: #dee2e6;">電話番号</th>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <th style="width: 40%; background-color: #dee2e6;">メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-2 mt-4 offset-1">
      <h5>注文履歴</h5>
    </div>
    <div class="col-2 mt-3">
      <%= link_to "一覧を表示する", public_orders_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>