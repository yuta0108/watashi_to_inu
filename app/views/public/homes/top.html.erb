<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel" data-interval="2000">
                                    <!--スライドやアニメーションの演出  <!--自動的にカルーセルのスライドが開始,2秒で切り替わる-->
        <div class="carousel-inner"><!-- スライドが配置されるコンテナ -->
          <div id="carouselExample" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <%= image_tag("chiwa.jpg", width: "800", height: "500", class: "d-block mx-auto", alt: "Centered Image") %>
              </div>
              <div class="overlay">
                <h1>わたしといぬ</h1>
              </div>
              <div class="carousel-item">
                <%= image_tag("hot.jpg", width: "800", height: "500", class: "d-block mx-auto") %>
              </div>
              <div class="overlay">
                <h1>わたしといぬ</h1>
              </div>
              <div class="carousel-item">
                <%= image_tag("ore.jpg", width: "800", height: "500", class: "d-block mx-auto") %>
              </div>
              <div class="overlay">
                <h1>わたしといぬ</h1>
              </div>
              <div class="carousel-item">
                <%= image_tag("tennai-1.jpg", width: "800", height: "500", class: "d-block mx-auto") %>
              </div>
              <div class="overlay">
                <h1>わたしといぬ</h1>
              </div>
            </div>
          </div>
        </div>
        <!-- スライドを制御 -->
        <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row mt-4 justify-content-center">
    <div class="col">
      <%= image_tag 'ribon.png', size: '450x23' %>
    </div>
    <div class="col ml-4">
      <h4>新着商品</h4>
    </div>
    <div class="col">
      <%= image_tag 'ribon.png', size: '450x23' %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-2">
      <%= render "layouts/genre", genres: @genres %>
    </div>
    <div class="col">
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-3 mb-4">
            <%= link_to public_item_path(item.id) do%>
              <div class="card border-0 shadow-sm" style="width: 10rem;">
                <%= image_tag item.image, class: "card-img-top rounded hover-zoom", style: "object-fit: cover; width: 100%; height: 7rem;" %>
                <!--rounded:画像に丸みを帯びたスタイル--> <!--`object-fit: cover;`のスタイルは、画像のアスペクト比を維持しながら要素のサイズに合わせて画像をリサイズする-->
                <div class="card-body">
            <% end %>
                <h5 class="card-title"><%= item.name %></h5>
                <p class="card-text"><%= (item.tax_included_price * 1.1).floor %>円 (税込)</p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>