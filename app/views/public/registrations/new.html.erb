<div class="text-center my-5">
  <h2>新規会員登録</h2>
</div>
<div class='container p-5'>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="row justify-content-center">
      <div class="col-md-3 sm-6 mb-4">
        <h5>姓</h5>
        <%= f.text_field :first_name, class: "form-control", autofocus: true, autocomplete: "first_name" %>
      </div>
      <div class="col-md-3 sm-6 mb-4">
        <h5>名</h5>
        <%= f.text_field :last_name, class: "form-control", autofocus: true, autocomplete: "last_name" %>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-md-3 sm-6 mb-4">
        <h5>姓(カナ)</h5>
        <%= f.text_field :first_name_kana, class: "form-control", autofocus: true, autocomplete: "first_name_kana" %>
      </div>
      <div class="col-md-3 sm-6 mb-4">
        <h5>名(カナ)</h5>
        <%= f.text_field :last_name_kana, class: "form-control", autofocus: true, autocomplete: "last_name_kana" %>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-md-6 sm-8 mb-4">
        <h5>メールアドレス</h5>
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-md-6 sm-8 mb-4">
        <h5>電話番号(ハイフンなし)</h5>
        <%= f.text_field :phone_number, class: "form-control", autofocus: true, autocomplete: "phone_number" %>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-md-6 sm-8 mb-4">
        <h5>パスワード(6文字以上)</h5>
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-md-6 sm-8 mb-4">
        <h5>パスワード(確認用)</h5>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-md-5 sm-5 mb-4">
        <%= f.submit "新規登録", class: "btn btn-success mt-2" %>
      </div>
    </div>
  <% end %>
  <div class="text-center">
    <h4 class="mt-4">既に登録済みの方</h4>
    <p class="mb-0">
      <%= link_to "こちら", new_customer_session_path %>からログインしてください。
    </p>
  </div>
</div>