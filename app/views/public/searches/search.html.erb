<div class="container p-5">
  <div class='row'>
    <table class="table border table-hover table-inverse">
      <!--@resultが空ではなく、かつ@itemが存在する場合に実行-->
      <% if @result == [] %>
        <h3 class="mt-3 text-center">検索結果がありません。</h3>
      <% elsif @item.present? %>
      <% search_word = @q.name_cont %>
    <h2 class="my-4">検索結果 "<%= search_word %>"</h2>
      <thead>
        <tr style="background-color: #a57f5e;">
          <th>商品画像</th>
          <th>商品名</th>
          <th>税込価格</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @item.each do |f| %>
          <td style="background-color: white;"><%= image_tag f.image_attachment, class: "image", width: 80, height: 70 %></td>
          <td style="background-color: white;"><%= link_to f.name, public_item_path(@item.ids) %></td>
          <td style="background-color: white;"><%= (f.tax_included_price* 1.1).floor %>円</td>
        </tr>
        <% end %>
      <% else %>
        <h3 class="mt-5 text-center p-5">検索結果がありません。</h3>
      <% end %>
    </table>
  </div>
</div>