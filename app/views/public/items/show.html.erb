<div class="text-center my-5">
  <h3>商品一覧</h3>
</div>
<div class="container">
  <div class="row">
    <div class="col-2">
      <%= render "layouts/genre", genres: @genres %>
    </div>
    <div class="col-8">
      <div class="row justify-content-center">
        <div class="col-5">
          <%= image_tag @item.image, class: "w-100" %>
        </div>
        <div class="col-5">
          <%= @item.name %>
          <div class="row">
            <div class="col-10 my-4">
              <%= @item.product_description %>
            </div>
          </div>
          <div class="row">
            <div class="col-10 mb-4">
              <%= (@item.tax_included_price * 1.1).floor %>円（税込）
            </div>
          </div>
          <% if customer_signed_in? %>
            <%= form_with model: @cart_item, url: public_cart_items_path,method: :post,local:true do |f| %>
              <div class="row">
                <div class="col-6">
                  <%= f.hidden_field :item_id, value: @item.id %>
                  <%= f.select :amount, (1..30).to_a, { include_blank: '個数選択' }, class: 'form-control' %>
                  <!--`(1..30).to_a`は、選択肢の範囲を指定-->
                </div>
                <div class="col-5">
                  <%= f.submit "カートに追加", class: "btn btn-success" %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

