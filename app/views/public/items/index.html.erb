<div class="text-center my-5">
  <h3>商品一覧</h3>
</div>
<div class="container">
  <div class="row">
    <div class="col-2">
      <%= render "layouts/genre", genres: @genres %>
    </div>
    <div class="col">
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-3 mb-4">
            <div class="card border-0 shadow-sm" style="width: 10rem;">
              <%= image_tag item.image, class: "card-img-top rounded", style: "object-fit: cover; width: 100%; height: 7rem;" %>
              <div class="card-body">
                <h5 class="card-title"><%= item.name %></h5>
                <p class="card-text"><%= (item.tax_included_price * 1.1).floor %>円 (税込)</p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>