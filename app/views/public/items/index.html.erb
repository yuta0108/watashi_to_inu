<div class="text-center my-5" style="position: relative;">
  <%= image_tag 'sample-ribbon3.png', size: '450x60' %>
  <h3 style="position: absolute; top: 58%; left: 50%; transform: translate(-50%, -50%);">商品一覧</h3>
</div>
<div class="container">
  <div class="row my-4 ml-auto">
    <div class="col">
      <div class="sort">
        <%= link_to '新しい順', public_items_path(latest: "true"), class: 'btn btn-success' %>
        |
        <%= link_to '古い順', public_items_path(old: "true"), class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-2">
      <%= render "layouts/genre", genres: @genres %>
    </div>
    <div class="col">
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-3 mb-4">
            <%= link_to public_item_path(item.id) do%>
              <div class="card border-0 shadow-sm" style="width: 10rem;">
                <%= image_tag item.image, class: "card-img-top rounded hover-zoom", style: "object-fit: cover; width: 100%; height: 7rem;" %>
                <!--rounded:画像に丸みを帯びたスタイル--> <!--`object-fit: cover;`のスタイルは、画像のアスペクト比を維持しながら要素のサイズに合わせて画像をリサイズする-->
                <div class="card-body">
            <% end %>
                <h5 class="card-title"><%= item.name %></h5>
                <p class="card-text"><%= (item.tax_included_price * 1.1).floor %>円 (税込)</p>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="col-md-4 my-5 mx-auto">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>

