<div class="text-center my-5">
  <h3>会員一覧</h3>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="table-secondary">会員ID</th>
            <th class="table-secondary">氏名</th>
            <th class="table-secondary">メールアドレス</th>
            <th class="table-secondary">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr class="table-light">
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer.id) do %>
                  <%= customer.first_name %> <%= customer.last_name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <td><%= I18n.t("enums.customer.is_active.#{customer.is_active}") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4 my-5 mx-auto">
      <%= paginate @customers %>
    </div>
  </div>
</div>
