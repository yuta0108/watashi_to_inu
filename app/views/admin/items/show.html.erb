<div class="text-center my-5">
  <h3>商品詳細</h3>
</div>
<div class="container">
  <div class="row">
    <div class="col-5 sm-8">
      <%= image_tag @item.image, class: "w-100" %>
    </div>
    <div class="col-7">
      <div class="row">
        <div class="col-4">
          <h5>商品名</h5>
        </div>
        <div class="col-7 mb-4">
          <%= @item.name %>
        </div>
      </div>
      <div class="row">
        <div class="col-4">
          <h5>商品説明</h5>
        </div>
        <div class="col-7 mb-4">
          <%= @item.product_description %>
        </div>
      </div>

      <div class="row">
        <div class="col-4">
          <h5>ジャンル</h5>
        </div>
        <div class="col-7 mb-4">
          <%= @item.genre.name %>
        </div>
      </div>
      <div class="row">
        <div class="col-4">
          <h5>税込価格</h5>
        </div>
        <div class="col-8">
          <%= (@item.tax_included_price * 1.1).floor %>
          (<%= @item.tax_included_price %>)円
        </div>
      </div>
      <div class="row">
        <div class="col-4 mb-4">
          (税抜価格)
        </div>
      </div>
      <div class="row">
        <div class="col-4 mb-4">
          <h5>販売ステータス</h5>
        </div>
        <div class="col-7">
        <%= content_tag(:div, class: @item.is_sales ? "text-success" : "text-danger") do %>
        <!--指定したタグ名と属性を持つHTML要素を作成する-->
          <%= @item.is_sales ? content_tag(:strong, "販売中") : content_tag(:strong, "販売停止中") %>
        <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-2"></div>
        <div class="col">
          <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
</div>
