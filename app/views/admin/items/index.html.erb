<div class="text-center mt-5 mb-3">
  <h3>商品一覧</h3>
</div>
<div class="container">
  <div class="row">
    <div class="col-3 mb-3 ml-auto">
      <%= link_to new_admin_item_path do %>
        <i class="fa-solid fa-plus" style="color: green; font-size: 30px;"></i>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-10">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td>
                <%= link_to admin_item_path(item.id) do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td><%= item.tax_included_price %>円</td>
              <td><%= item.genre.name %></td>
              <td><%= content_tag(:div, class: item.is_sales ? "text-success" : "text-danger") do %>
                  <!--指定したタグ名と属性を持つHTML要素を作成する-->
                    <%= item.is_sales ? content_tag(:strong, "販売中") : content_tag(:strong, "販売停止中") %>
                  <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
